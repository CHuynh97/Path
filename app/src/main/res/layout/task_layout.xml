<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- element to display task entry number -->
    <FrameLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="0dp"

        android:background="@color/entry_numbackground">

        <Button
            android:width="15dp"
            android:layout_height="25dp"
            android:layout_gravity="top|left"
            android:background="@android:color/transparent"
            android:text="X"
            android:textColor="@color/white"

            android:id="@+id/destroytask_btn"
            android:layout_width="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:text="8"
            android:id="@+id/task_count"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <!-- Task/location header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"

                android:text="Task/Location:"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priority_cb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Priority"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="End"/>

        </LinearLayout>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/task_location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Time Duration header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Estimated Duration:"/>
            <EditText
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/task_duration"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="mins"/>
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>