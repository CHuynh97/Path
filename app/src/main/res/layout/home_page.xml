<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/paththeme_green">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"

        android:src="@drawable/path_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Enter your starting location:"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_startentry">

        <EditText
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:id="@+id/home_search"
            android:textColor="@color/white"
            android:background="#349b46"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/home_search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/paththeme_green"
        android:orientation="horizontal"
        android:gravity="center">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#349b46"
            android:id="@+id/currentloc_cb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/paththeme_green"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Use current location"/>

    </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="80dp"
            android:id="@+id/next"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:background="@drawable/rounded_homeproceed"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-25dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_anchors">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/home_settings"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:textSize="26dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/white"
                android:text="SETTINGS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_anchors">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/home_helpicon"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="match_parent"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="26dp"
                android:textColor="@color/white"
                android:text="HELP"
                android:id="@+id/helpButton"/>
        </LinearLayout>

    </LinearLayout>
    
    
</LinearLayout>